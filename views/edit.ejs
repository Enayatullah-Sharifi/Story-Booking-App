<div class="form-container">
    <a href="/dashboard">Back</a>
        <h1>Edit Story</h1>
        
        <form action="/edit<%= story.id %>" method="POST">
            <input type="text" name="title" placeholder="Title..."  value="<%= story.title !== '' ? story.title  : '' %> ">
            <input type="text" name="body" placeholder="Body..." value="<%= story.body !== '' ? story.body : '' %>" >
            <input type="text" name="status" placeholder="Status..." value="<%= story.status !== '' ? story.status : '' %>">
            <input type="submit" value="Update">
        </form>
    </div>
    